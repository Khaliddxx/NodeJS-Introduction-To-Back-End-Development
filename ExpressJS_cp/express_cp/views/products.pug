extends layout 

block content

    div.row
        each product in products
            div.card.mx-2(style= "width: 18rem;")
                div.card-body
                    h5.card-title= product.name
                    h6.card-subtitle.mb-2.text-muted= product.store
                    p.card-text= product.description
                    a.card-link(href=`/products/edit/${product._id}`) Edit